{
  "extends": "../../tsconfig.base.json", // 继承主配置文件
  "compilerOptions": {
    "composite": true, // 支持项目引用
    "outDir": "dist", // 输出目录
    "declaration": true, // 生成声明文件
    "declarationMap": true, // 生成声明文件映射
    "emitDeclarationOnly": true // 仅生成声明文件
  },
  "include": ["src"], // 包含的源文件目录
  "exclude": ["**/__tests__", "**/*.test.ts"] // 排除的测试文件
}
