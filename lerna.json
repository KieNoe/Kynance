{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.1.0",
  "npmClient": "pnpm",
  "packages": ["packages/*", "apps/*"],
  "conventionalCommits": true,
  "command": {
    "version": {
      "allowBranch": "main"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock", "--legacy-peer-deps"]
    }
  }
}
