{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "references": [
    {
      "path": "./tsconfig.nodenext.json",
      "include": ["src/service/client.ts"]
    }
  ],
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "node_modules/tdesign-vue-next/global.d.ts",
    "../../packages/chart-core/chart-render/calculate.ts",
    "src/workers/worker.js"
  ]
}
